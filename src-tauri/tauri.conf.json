{
  "productName": "GhostFS",
  "version": "0.1.0",
  "identifier": "com.ghostfs.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../gui-dist"
  },
  "app": {
    "windows": [
      {
        "title": "GhostFS - Data Recovery Tool",
